{% extends 'base.html.twig' %}
{% block body %}
    <div class="container up-main">
        <div class="row">
            <div class="col-md-12">
                <h1>SubPages</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Route</th>
                        <th>Tytuł</th>
                        <th>Zawartość</th>
                        <th>Ostatnia aktualizacja</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for page in subPages %}
                        <tr>
                            <td>{{ page.id }}</td>
                            <td>{{ page.route }}</td>
                            <td>{{ page.title }}</td>
                            <td>{{ page.description }}</td>
                            <td>{{ page.postedAt|date('Y-m-d H:i:s') }}</td>
                            <td><a class="btn btn-info" href="{{ path('unipro-admin-edit', {'entity':'PagesContent', 'id': page.id}) }}">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}